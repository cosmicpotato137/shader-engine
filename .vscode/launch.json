{
  "configurations": [
    {
      "name": "Launch (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/Debug/ShaderSandbox.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/bin/Debug",
      "environment": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Test (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/Debug/ShaderEngineTest.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/bin/Debug",
      "environment": [],
      "console": "internalConsole"
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/Debug/RenderEngine.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/path/to/gdb", // todo: set this properly
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "version": "1.0.0"
}
